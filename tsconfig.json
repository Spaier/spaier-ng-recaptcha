{
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "skipLibCheck": true,
    "outDir": "./dist/",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false
  }
}
